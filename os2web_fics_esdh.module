/**
 * Implements hook_ctools_plugin_directory().
 *
 * Register as provider of ESDH plugins
 */
function os2web_fics_esdh_ctools_plugin_directory($module, $plugin) {
  if ($module == 'os2web_esdh_provider') {
    return "plugins/$plugin";
  }
}

